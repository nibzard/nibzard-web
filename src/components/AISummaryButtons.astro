---

<div class="ai-summary-section">
  <p class="ai-summary-label">Request an AI summary of this blog</p>
  <div class="ai-buttons-row">
    {aiPlatforms.map(platform => (
      <a
        href={`${platform.url}?q=${encodedPrompt}`}
        target="_blank"
        rel="noopener noreferrer"
        class="ai-button"
        aria-label={`Summarize with ${platform.name}`}
        title={`Summarize with ${platform.name}`}
      >
        <span class="ai-button-icon" set:html={platform.svg} />
      </a>
    ))}
  </div>
</div>

<style>
  .ai-summary-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    padding: var(--space-lg) 0;
    text-align: center;
  }

  .ai-summary-label {
    font-family: var(--font-body);
    font-size: var(--font-size-base);
    color: var(--color-text-muted);
    margin: 0;
  }

  .ai-buttons-row {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-background-alt);
    border: 1px solid var(--color-border);
    color: var(--color-text);
    text-decoration: none;
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    cursor: pointer;
    overflow: hidden;
    padding: 0.375rem;
  }

  .ai-button:hover {
    transform: scale(1.1);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-button:focus-visible {
    outline: 2px solid var(--color-accent1);
    outline-offset: 2px;
  }

  .ai-button-icon {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-button-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  @media (max-width: 480px) {
    .ai-buttons-row {
      gap: var(--space-sm);
    }
  }
</style>
