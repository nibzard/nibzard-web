---
/**
 * ThoughtRenderer Component
 * Renders a thought entry with proper markdown processing
 */

interface Props {
  entry: any;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Generate slug from entry ID (filename: YYMMDD.md)
const slug = entry.id.split('/').pop().replace('.md', '');
---

<div
  class="thought-item"
  data-href={`/thoughts/${slug}`}
  role="button"
  tabIndex="0"
  aria-label={`Read thought from ${new Date(entry.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}`}
>
  <div class="entry-meta">
    <time datetime={entry.data.date.toISOString()}>
      {new Date(entry.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
    </time>
    <span class="entry-type">Thought</span>
  </div>
  <div class="thought-content">
    <blockquote>
      <Content />
    </blockquote>
  </div>
</div>
