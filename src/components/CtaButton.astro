---
/**
 * CtaButton Component
 * A reusable call-to-action button with customizable styling
 */

interface Props {
  text: string;
  href?: string;
  type?: "primary" | "secondary" | "accent";
  size?: "small" | "medium" | "large";
  class?: string;
}

const {
  text,
  href,
  type = "primary",
  size = "medium",
  class: className = "",
} = Astro.props;

// Determine if this is a button or anchor
const isLink = !!href;

// Generate classes based on type and size
const classes = [
  "cta-button",
  `cta-${type}`,
  `cta-${size}`,
  className
].filter(Boolean).join(" ");
---

{isLink ? (
  <a href={href} class={classes}>
    <slot>{text}</slot>
  </a>
) : (
  <button type="button" class={classes}>
    <slot>{text}</slot>
  </button>
)}