<style>
  /* Remove all borders from newsletter and footer area */
  .newsletter-card {
    border: none !important;
    box-shadow: none !important;
  }

  footer,
  .newsletter-section,
  .ai-summary-section,
  .footer-content,
  .footer-grid,
  .footer-grid > div,
  .footer-list,
  .footer-title,
  .footer-bottom {
    border: none !important;
    box-shadow: none !important;
  }

  .footer-content {
    padding: 3rem 0 2rem;
    max-width: 1000px;
    margin: 0 auto;
    padding-left: 2rem;
    padding-right: 2rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.75rem 0;
    color: var(--color-text);
  }

  .footer-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-list li {
    margin-bottom: 0.4rem;
  }

  .footer-list a {
    color: var(--color-text-muted);
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    transition: color 150ms ease;
  }

  .footer-list a:hover {
    color: var(--color-accent2);
  }

  .footer-bottom {
    padding-top: 1.5rem;
  }

  .copyright {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .footer-content {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
