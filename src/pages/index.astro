---
import BaseLayout from '../layouts/BaseLayout.astro';
import FadeIn from '../components/animations/FadeIn.jsx';
import '../styles/index.less';
---

<BaseLayout title="nibzard - Home" description="Welcome to nibzard, a minimal personal website and log.">
  <FadeIn client:visible yOffset={10} duration={0.3}>
    <section class="hero">
      <h1>nibzard</h1>
      <p>A minimal personal website inspired by Japanese and Scandinavian design principles. Terminal aesthetics with clean typography and subtle color accents.</p>
      <a href="/log" class="cta-button">View Log</a>
    </section>
  </FadeIn>

  <div class="divider">···</div>

  <FadeIn client:visible delay={0.2} yOffset={5}>
    <section class="recent-posts">
      <h2>> Recent Entries</h2>
      <div class="post-list">
        <article class="post-item">
          <span class="post-date mono">2023-05-08</span>
          <a href="/log/entry-1">Embracing Minimalism in Digital Design</a>
        </article>
        <article class="post-item">
          <span class="post-date mono">2023-04-22</span>
          <a href="/log/entry-2">Thoughts on Typography and Readability</a>
        </article>
        <article class="post-item">
          <span class="post-date mono">2023-04-15</span>
          <a href="/log/entry-3">Color Theory in Minimalist Interfaces</a>
        </article>
      </div>
      <p><a href="/log" class="view-all">Browse all entries <span class="accent2">→</span></a></p>
    </section>
  </FadeIn>
</BaseLayout>

<style>
  /* Additional styles not covered by index.less */
  .post-list {
    margin: var(--space-md) 0;
  }
  
  .post-item {
    margin-bottom: var(--space-sm);
    display: flex;
    flex-direction: column;
  }
  
  .post-date {
    font-size: 0.8rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-2xs);
  }
  
  .view-all {
    display: inline-block;
    margin-top: var(--space-md);
    font-size: 0.9rem;
  }
  
  @media (min-width: 640px) {
    .post-item {
      flex-direction: row;
      align-items: baseline;
    }
    
    .post-date {
      min-width: 6.5rem;
      margin-bottom: 0;
      margin-right: var(--space-md);
    }
  }
</style>
