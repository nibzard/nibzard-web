---
export const prerender = false;
import { getEntry, type CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import NotFoundContent from '../../components/NotFoundContent.astro';
import ThoughtEntry from '../../components/ThoughtEntry.astro';
import FadeIn from '../../components/animations/FadeIn.jsx';

const { slug } = Astro.params;

let entry: CollectionEntry<'thoughts'> | undefined;

if (slug) {
  try {
    entry = await getEntry('thoughts', slug);
  } catch (error) {
    console.error(`Error fetching thought entry for slug "${slug}":`, error);
    entry = undefined;
  }
}

if (!entry) {
  Astro.response.status = 404;
}

let ContentComponent: any;

if (entry) {
  const rendered = await entry.render();
  ContentComponent = rendered.Content;
}
---

{entry && ContentComponent ? (
  <BaseLayout
    title={`Thought — ${new Date(entry.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}`}
    description="A quick thought from Nikola Balić"
  >
    <FadeIn client:visible>
      <section>
        <ThoughtEntry entry={entry}>
          <ContentComponent />
        </ThoughtEntry>
      </section>
    </FadeIn>
  </BaseLayout>
) : (
  <BaseLayout title="404 - nibzard" description="Thought not found">
    <NotFoundContent slug={slug} />
  </BaseLayout>
)}
