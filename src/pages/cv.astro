    canonical={canonicalUrl}
    openGraph={{
      basic: {
        title: "CV - Nikola Baliƒá",
        type: "website",
        image: defaultOgImage,
        url: canonicalUrl,
      }
    }}
  />
</head>
<body>
  <FadeIn client:visible>
    <div class="cv-container">
      <header class="cv-header">
        <div class="header-content">
          <h1>Nikola Baliƒá</h1>
