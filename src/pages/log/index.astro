---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import FadeIn from '../../components/animations/FadeIn.jsx';
import LogItem from '../../components/LogItem.astro';

// Get all log entries that aren't drafts
const logEntries = await getCollection('log', ({ data }) => {
  return data.draft !== true;
});

// Sort entries by date (newest first)
logEntries.sort((a, b) => new Date(b.data.date).valueOf() - new Date(a.data.date).valueOf());
---
<style>
  /* Styles from log-index.css */
  .log-header {
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    /* border-bottom: 1px solid #f8f8f8; */ /* Using theme variable */
    border-bottom: 1px solid var(--color-border-muted, #f0f0f0); /* Using a muted border or fallback */
  }

  .log-header h1 {
    /* font-size: 2rem; */ /* Let global H1 style take precedence or use a more semantic variable */
    margin-bottom: var(--space-xs);
  }

  .log-header p {
    margin-bottom: 0;
    color: var(--color-text-muted);
  }

  .log-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  /* Optional: if direct li children of this log-list need marker removal */
  /* Handled by LogItem.astro for its items, but if page has other LIs in .log-list */
  /* .log-list > li::marker {
    display: none;
    content: "";
  } */
</style>
<BaseLayout title="Log - nibzard" description="A collection of thoughts, updates, and project logs.">
  {/* The <style> tag has been removed */}
  <FadeIn client:visible>
    <section class="log-header">
      <h1>Log</h1>
      <p>Chronicles of development, ideas, and musings.</p>
    </section>
  </FadeIn>

  <ul class="log-list">
    {logEntries.length === 0 && <p>No log entries yet. Stay tuned!</p>}
    {logEntries.map((entry, index) => (
      <FadeIn client:visible delay={0.05 * index}>
        <LogItem entry={entry} />
      </FadeIn>
    ))}
  </ul>
</BaseLayout>